@model IPSAInventario.ViewModels.FDetalleSoftViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Asignar Software</h2>
@using (Html.BeginForm("Save", "Factura_Detalle_Soft", FormMethod.Post))
{
    <div class="form-group">
        <!--Se referencia al modelo-->
        @Html.LabelFor(m => m.IDFactura)
        <!--Se liga el objeto en vista al modelo-->
        @Html.TextBoxFor(m => m.IDFactura, new { @class = "form-control" })
        <!--Se validan los requisitos del modelo-->
        @Html.ValidationMessageFor(m => m.IDFactura)
    </div>
    <div class="form-group">
        <!--Se referencia al modelo-->
        @Html.LabelFor(m => m.IDSoftware)
        <!--Se liga el objeto en vista al modelo-->
        @Html.TextBoxFor(m => m.IDSoftware, new { @class = "form-control" })
        <!--Se validan los requisitos del modelo-->
        @Html.ValidationMessageFor(m => m.IDSoftware)
    </div>
    <div class="form-group">
        <!--Se referencia al modelo-->
        @Html.LabelFor(m => m.Responsable)
        <!--Se liga el objeto en vista al modelo-->
        @Html.TextBoxFor(m => m.Responsable, new { @class = "form-control" })
        <!--Se validan los requisitos del modelo-->
        @Html.ValidationMessageFor(m => m.Responsable)
    </div>
    <button type="submit" class="btn btn-primary">Asignar</button>
    <!--Crea un token volatil para la solicitud POST a la base de datos, para seguridad en el uso indebido de la secion-->
    @Html.AntiForgeryToken()
}

