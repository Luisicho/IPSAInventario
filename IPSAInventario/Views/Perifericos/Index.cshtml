
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Perifericos</h2>
@Html.ActionLink("Nuevo Periferico", "NewPerifericos", "Perifericos", new { @class = "btn btn-info mb-3", style = "margin:1rem;" })
<table class="table table-bordered table-hover" id="perifericos">
    <thead>
        <tr>
            <th>IDPeriferico</th>
            <th>Eliminar</th>
            <th>Editar</th>
            <th>Tipo_Periferico</th>
            <th>Marca</th>
            <th>Modelo</th>
            <th>NoSerie</th>
            <th>Revisado</th>
            <th>Baja</th>
            <th>Aplicacion</th>
            <th>Expediente</th>
            <th>Comentario</th>
            <th>Disponibilidad</th>
            <th>Check_</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>

        $(document).ready(function () {
            var tabal = $("#perifericos").DataTable({
                ajax: {
                    url: "/api/perifericos",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "idPeriferico"
                    },
                    {
                        data: "idPeriferico",
                        render: function (data) {
                            return "<button class = 'btn btn-danger js-delete' data-periferico-id = " + data + ">Eliminar</button>";
                        }
                    },
                    {
                        data: "idPeriferico",
                        render: function (data) {
                            return "<a class = 'btn btn-success' href = '/perifericos/edit/" + data + "'>Editar</a>";
                        }
                    },
                    {
                        data: "tipo_Periferico"
                    },
                    {
                        data: "marca"
                    },
                    {
                        data: "modelo"
                    },
                    {
                        data: "noSerie"
                    },
                    {
                        data: "revisado"
                    },
                    {
                        data: "baja"
                    },
                    {
                        data: "aplicacion"
                    },
                    {
                        data: "expediente"
                    },
                    {
                        data: "comentario"
                    },
                    {
                        data: "disponibilidad"
                    },
                    {
                        data: "check_"
                    }
                ]
            });

            $("#perifericos").on("click", "js-delete", function () {
                var button = $(this);
                bootbox.confirm({
                    message: "¿Seguro que quiere eliminar este periferico?",
                    size: "extra-large",
                    buttons: {
                        confirm: {
                            label: 'Aceptar',
                            className: 'btn-success'
                        },
                        cancel: {
                            label: 'Cancelar',
                            className: 'btn-danger'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: "/api/perifericos/" + button.attr("data-perifericos-id"),
                                method: "DELETE",
                                success: function () {
                                    tabla.row(button.parents("tr"))
                                        .remove()
                                        .draw()
                                    toastr.success("Se elimino correctamente")
                                },
                                error: function () {
                                    toastr.error("Ocurrio un error inesperado")
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>
}
