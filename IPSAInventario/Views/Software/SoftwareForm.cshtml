@model IPSAInventario.ViewModels.SoftwareFormViewModel
@{
    ViewBag.Title = "SoftwareForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Software</h2>
<!--Crea un nuevo formulario con para crear nuevas facturas-->
@using (Html.BeginForm("Save", "Software", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(m => m.IDSoftware)
    </div>
    <div class="form-group">
        <!--Se referencia al modelo-->
        @Html.LabelFor(m => m.Product_Key)
        <!--Se liga el objeto en vista al modelo-->
        @Html.TextBoxFor(m => m.Product_Key, new { @class = "form-control" })
        <!--Se validan los requisitos del modelo-->
        @Html.ValidationMessageFor(m => m.Product_Key)
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <!--Crea un token volatil para la solicitud POST a la base de datos, para seguridad en el uso indebido de la secion-->
    @Html.AntiForgeryToken()
}
